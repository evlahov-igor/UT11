						НаборИзменен = Истина;
					Иначе
						СтрокиНабораКУдалению.Добавить(СтрокаНабораЗаписей);
					КонецЕсли;
				КонецЕсли;
			КонецЦикла;
			
			Для каждого СтрокаКУдалению Из СтрокиНабораКУдалению Цикл
				НаборЗаписей.Удалить(СтрокаКУдалению);
				НаборИзменен = Истина;
			КонецЦикла;
			
			Если ТаблицаСуммыДокументовВВалютахУчета <> Неопределено Тогда
				
				МассивИдентификаторов = НаборЗаписей.ВыгрузитьКолонку("ИдентификаторСтроки");
				Для каждого СтрокаТаблицы Из ТаблицаСуммыДокументовВВалютахУчета Цикл
					Если МассивИдентификаторов.Найти(СтрокаТаблицы.ИдентификаторСтроки) <> Неопределено Тогда
						Продолжить;
					КонецЕсли;
					НоваяЗапись = НаборЗаписей.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяЗапись, СтрокаТаблицы);
					НаборИзменен = Истина;
					МассивИдентификаторов.Добавить(СтрокаТаблицы.ИдентификаторСтроки);
				КонецЦикла;
				
			КонецЕсли;
			
			Если НаборИзменен Тогда
				ОбновлениеИнформационнойБазы.ЗаписатьНаборЗаписей(НаборЗаписей);
			Иначе
				ОбновлениеИнформационнойБазы.ОтметитьВыполнениеОбработки(НаборЗаписей);
			КонецЕсли;
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			Шаблон = НСтр("ru = 'Не удалось записать данные в регистр %1 по регистратору ""%2"", по причине: %3'");
