Процедура КР_КонтрольУникальностиДокумента(Отказ)
	
	// Прим. разработчика
	// По требованию ФДР документы контролируются без огрнаичений по периоду
	// Потенциально запрос к таблице документов не оптимален,
	// однако запрос к 2 регистрам сведений и их связь по регистратору
	// также потенциально снизит производительность
	//
	// Прим. разработчика 2
	// Порядок условий изменен так, что предположительно улучшит
	// производительность, если включить индексирование КР_Контейнер
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	Запрос.УстановитьПараметр("ОбъектПланирования", ОбъектПланирования);
	Запрос.УстановитьПараметр("Контейнер", КР_Контейнер);
	Запрос.Текст =
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	ИзменениеАссортимента.Ссылка КАК Ссылка
	|ИЗ
	|	Документ.ИзменениеАссортимента КАК ИзменениеАссортимента
	|ГДЕ
	|	ИзменениеАссортимента.КР_Контейнер = &Контейнер
	|	И ИзменениеАссортимента.ОбъектПланирования = &ОбъектПланирования
	|	И ИзменениеАссортимента.Проведен
	|	И ИзменениеАссортимента.Ссылка <> &Ссылка";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		ТекстОшибки = НСтр("ru = 'Документ ""%1"" с выбранным контейнером №%2 по объекту планирования ""%3"" уже проведен.
								 |%4'");
		ТекстОшибки = СтрШаблон(ТекстОшибки,
			Метаданные().Синоним,
			КР_Контейнер,
			ОбъектПланирования,
			Выборка.Ссылка);
		ОбщегоНазначения.СообщитьПользователю(ТекстОшибки, , , , Отказ);
	КонецЕсли;
	
КонецПроцедуры // >> 26.12.2022, Маскаев П.Ю., КРОК, Jira№ A2105505-948

