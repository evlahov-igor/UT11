Процедура КР_ПередЗаписьюДополнительно(Отказ, РежимЗаписи, РежимПроведения)
	
	// << 08.11.2023 Марченко С.Н., КРОК, JIRA№A2105505-2459
	Если РежимЗаписи = РежимЗаписиДокумента.ОтменаПроведения
		И Не Пользователи.ЭтоПолноправныйПользователь()
		И РольДоступна("КР_ОграниченноеДобавлениеДокументаИзмененияАссортимента") Тогда 
		ТекстСообщения = 
			НСтр("ru = 'Вам разрешено только добавление/проведение новых документов ""Изменение ассортимента""'");
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, , , , Отказ);
		Возврат;
	КонецЕсли;	
	// >> 08.11.2023 Марченко С.Н., КРОК, JIRA№A2105505-2459
	
	Если Этап = Перечисления.ЭтапыИзмененияАссортимента.КР_Заморозка
		// << 25.04.2023, Гашников А.П., КРОК, Jira№ A2105505-1553
		Или Этап = Перечисления.ЭтапыИзмененияАссортимента.КР_ПереводНаВременнуюКонсервацию
		Или Этап = Перечисления.ЭтапыИзмененияАссортимента.КР_РазблокировкаВременнойКонсервации
		// >> 25.04.2023, Гашников А.П., КРОК, Jira№ A2105505-1553
		Или Этап = Перечисления.ЭтапыИзмененияАссортимента.КР_Приостановка
		// << 10.11.2023 Марченко С.Н., КРОК, JIRA№A2105505-2403
		Или Этап = Перечисления.ЭтапыИзмененияАссортимента.КР_СнятиеЗаморозки
		// >> 10.11.2023 Марченко С.Н., КРОК, JIRA№A2105505-2403
		Тогда
		Товары.Очистить();
	Иначе
		//КР_ТоварыСХарактеристикой.Очистить();
		КР_ЗаполнитьТоварыСХарактеристикойИзТовары();
	КонецЕсли;
	
	Если Этап = Перечисления.ЭтапыИзмененияАссортимента.ВводВАссортимент
			Или Этап = Перечисления.ЭтапыИзмененияАссортимента.КР_ЗапретОтгрузок Тогда
		// A2105505-1015 - отказ от контроля уникальности
		//Если ЗначениеЗаполнено(КР_Контейнер)
		//		И РежимЗаписи = РежимЗаписиДокумента.Проведение Тогда
		//	КР_КонтрольУникальностиДокумента(Отказ);
		//КонецЕсли;
	Иначе
		КР_Контейнер = Справочники.КР_Контейнеры.ПустаяСсылка();
	КонецЕсли;
	
	// << 25.04.2023, Гашников А.П., КРОК, Jira№ A2105505-1553
	КР_КонтрольТоваровРазблокировка(Отказ, РежимЗаписи, РежимПроведения);
	// >> 25.04.2023, Гашников А.П., КРОК, Jira№ A2105505-1553
	
КонецПроцедуры

