&НаСервере
Процедура КР_ЗаполнитьДанныеДСКассы()
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("НаДату", Объект.Дата);
	запрос.УстановитьПараметр("Граница", Новый МоментВремени(Объект.Дата, Объект.Ссылка));
	Запрос.УстановитьПараметр("Касса", Объект.Касса);
	Запрос.УстановитьПараметр("Подразделение",
		ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Объект.Касса, "Подразделение"));
	Запрос.Текст =
	"ВЫБРАТЬ
	|	КассовыеЛимиты.Сумма КАК КассовыйЛимит
	|ИЗ
	|	РегистрСведений.КР_КассовыеЛимиты.СрезПоследних(&НаДату, Магазин.Подразделение = &Подразделение) КАК КассовыеЛимиты
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ДенежныеСредстваНаличные.СуммаРеглОстаток КАК ОстатокВКассе
	|ИЗ
	|	РегистрНакопления.ДенежныеСредстваНаличные.Остатки(&Граница, Касса = &Касса) КАК ДенежныеСредстваНаличные";
	
	ПакетРезультатов = Запрос.ВыполнитьПакет();
	
	Выборка = ПакетРезультатов[0].Выбрать();
	Если Выборка.Следующий() Тогда
		ЭтотОбъект.КР_КассовыйЛимит = Выборка.КассовыйЛимит;
	Иначе
		ЭтотОбъект.КР_КассовыйЛимит = 0;
	КонецЕсли;
	
	Выборка = ПакетРезультатов[1].Выбрать();
	Если Выборка.Следующий() Тогда
		ЭтотОбъект.КР_ОстатокВКассе = Выборка.ОстатокВКассе - Объект.СуммаДокумента;
	Иначе
		ЭтотОбъект.КР_ОстатокВКассе = 0;
	КонецЕсли;
	
КонецПроцедуры

