		КонецЕсли;
		Запрос.УстановитьПараметр("ПоЗаказам",                СсылкаОбъект.РеализацияПоЗаказам);
		Запрос.УстановитьПараметр("Таблица",                   СсылкаОбъект.Товары);
	КонецЕсли;
	
