// Дополняет коллекцию текстов вложенного запроса текстом запроса выборки регистрируемых данных к обновлению.
//
// Параметры:
//	ТекстыЗапроса - Массив Из Строка - коллекция текстов запроса.
//
Процедура ДополнитьТекстВложенногоЗапросаРегистрацииДанныхКОбработке(ТекстыЗапроса) Экспорт
	
	//++ Локализация
	ТекстЗапроса = "
	|ВЫБРАТЬ
	|	ДанныеОбъекта.Ссылка КАК Ссылка
	|ИЗ
	|	Справочник.Номенклатура КАК ДанныеОбъекта
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.КлассификаторТНВЭД КАК ДанныеКлассификатора
	|		ПО ДанныеОбъекта.КодТНВЭД = ДанныеКлассификатора.Ссылка
	|			И ДанныеОбъекта.ВестиУчетПоГТД
	|			И ДанныеКлассификатора.ПрослеживаемыйТовар";
	
	ТекстыЗапроса.Добавить(ТекстЗапроса);
	//-- Локализация
	
	Возврат;
	
КонецПроцедуры

// Дополняет коллекцию текстов вложенного запроса текстом запроса выборки обновляемых данных.
//
// Параметры:
//	ТекстыЗапроса - Массив Из Строка - коллекция текстов запроса.
//
Процедура ДополнитьТекстВложенногоЗапросаОбработкиДанных(ТекстыЗапроса) Экспорт
	
	//++ Локализация
	ТекстЗапроса = "
	|ВЫБРАТЬ
	|	ДанныеОбъекта.Ссылка					КАК Ссылка,
	|	ДанныеНоменклатуры.ВерсияДанных			КАК ВерсияДанных,
	|	ДанныеНоменклатуры.КодТНВЭД				КАК КодТНВЭД,
	|	ДанныеКлассификатора.ЕдиницаИзмерения	КАК ЕдиницаИзмерения,
	|	ИСТИНА									КАК ПрослеживаемыйТовар,
	|	ЛОЖЬ									КАК ЗаполнениеСтавки,
	|	ЛОЖЬ									КАК ЗаполнитьКонтрагента
	|ИЗ
	|	&ВТДанныеДляОбработки КАК ДанныеОбъекта
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.Номенклатура КАК ДанныеНоменклатуры
	|		ПО ДанныеОбъекта.Ссылка = ДанныеНоменклатуры.Ссылка
	|		
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.КлассификаторТНВЭД КАК ДанныеКлассификатора
	|		ПО ДанныеНоменклатуры.КодТНВЭД = ДанныеКлассификатора.Ссылка
	|			И ДанныеНоменклатуры.ВестиУчетПоГТД
	|			И ДанныеКлассификатора.ПрослеживаемыйТовар";
	
	ТекстыЗапроса.Добавить(ТекстЗапроса);
	//-- Локализация
	
	Возврат;
	
КонецПроцедуры

// Выполняет заполнение реквизитов прослеживаемости в номенклатуре при обновлении информационной базы.
//
// Параметры:
//	ДанныеОбъекта - СправочникОбъект.Номенклатура - обновляемый объект справочника Номенклатура.
//	ДанныеВыборки - ВыборкаИзРезультатаЗапроса - коллекция значений, которыми заполняется объект номенклатуры.
//	ОбъектИзменен - Булево - признак того, что выполнено изменение данных объекта номенклатуры.
//
Процедура ОбработатьДанныеРеквизитовПрослеживаемостиДляПереходаНаНовуюВерсию(ДанныеОбъекта,
																			ДанныеВыборки,
																			ОбъектИзменен) Экспорт
	
	//++ Локализация
	Если ДанныеВыборки.ПрослеживаемыйТовар
		И Не ДанныеОбъекта.ПрослеживаемыйТовар Тогда
		
		ОбъектИзменен = Истина;
		
		ДанныеОбъекта.ПрослеживаемыйТовар = Истина;
		
	КонецЕсли;
	//-- Локализация
	
	Возврат;
	
КонецПроцедуры

