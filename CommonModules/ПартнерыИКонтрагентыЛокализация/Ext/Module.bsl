// Получает данные контрагента по ИНН 
//
// Параметры:
//  ПараметрыФормирования - Структура - параметры формирования фонового задания.
//  АдресХранилища        - Строка - адрес хранилища, в который будут помещены результаты выполнения фонового задания.
//
Процедура ДанныеКонтрагентаПоИННФоновоеЗадание(ПараметрыФормирования, АдресХранилища) Экспорт
	
	Если ПараметрыФормирования.ЭтоЮридическоеЛицо Тогда
		РезультатФормирования = РаботаСКонтрагентами.СведенияОЮридическомЛицеПоИНН(ПараметрыФормирования.ИНН);
		ПреобразоватьРезыльтатСведенийОЮрЛице(РезультатФормирования);
	Иначе
		РезультатФормирования = РаботаСКонтрагентами.РеквизитыПредпринимателяПоИНН(ПараметрыФормирования.ИНН);
	КонецЕсли;
	
	ПоместитьВоВременноеХранилище(РезультатФормирования, АдресХранилища);
	
КонецПроцедуры

Процедура ПреобразоватьРезыльтатСведенийОЮрЛице(РезультатФормирования) Экспорт
	
	Если РезультатФормирования.Свойство("РАФП") Тогда
		Если РезультатФормирования.РАФП.Количество() Тогда
			ИсточникДанных = РезультатФормирования.РАФП[0];
		Иначе
			ИсточникДанных = РезультатФормирования.РАФП.Добавить();
		КонецЕсли;
		
		Для каждого КолонкаСведений Из РезультатФормирования.РАФП.Колонки Цикл
			РезультатФормирования.Вставить(КолонкаСведений.Имя, ИсточникДанных[КолонкаСведений.Имя]);
		КонецЦикла;
		РезультатФормирования.Удалить("РАФП");
		
		Если Не РезультатФормирования.Свойство("Наименование")
			И РезультатФормирования.Свойство("НаименованиеПолное") Тогда
			РезультатФормирования.Вставить("Наименование", РезультатФормирования.НаименованиеПолное);
		КонецЕсли;
		
		Если Не РезультатФормирования.Свойство("НаименованиеСокращенное")
			И РезультатФормирования.Свойство("НаименованиеПолное") Тогда
			РезультатФормирования.Вставить("НаименованиеСокращенное", РезультатФормирования.НаименованиеПолное);
		КонецЕсли;
	КонецЕсли;
	
	Если РезультатФормирования.Свойство("ЕГРЮЛ")
		И ТипЗнч(РезультатФормирования.ЕГРЮЛ) = Тип("Структура") Тогда
			ОбщегоНазначенияКлиентСервер.ДополнитьСтруктуру(РезультатФормирования, РезультатФормирования.ЕГРЮЛ, Истина);
			Если РезультатФормирования.ЕГРЮЛ.ВидДеятельности <> Неопределено Тогда
				РезультатФормирования.Вставить("КодОКВЭД", 	РезультатФормирования.ЕГРЮЛ.ВидДеятельности.Код);
				РезультатФормирования.Вставить("ЭтоОКВЭД2", РезультатФормирования.ЕГРЮЛ.ВидДеятельности.Классификатор);
			Иначе
				РезультатФормирования.Вставить("КодОКВЭД", 	Неопределено);
				РезультатФормирования.Вставить("ЭтоОКВЭД2", Неопределено);
			КонецЕсли;
			
			Руководитель = Новый Структура();
			Если РезультатФормирования.ЕГРЮЛ.Руководители.Количество() Тогда
				ИсточникДанныхРуководитель = РезультатФормирования.ЕГРЮЛ.Руководители[0];
			Иначе
				ИсточникДанныхРуководитель = РезультатФормирования.ЕГРЮЛ.Руководители.Добавить();
			КонецЕсли;
			
			Для каждого КолонкаСведений Из РезультатФормирования.ЕГРЮЛ.Руководители.Колонки Цикл
				Руководитель.Вставить(КолонкаСведений.Имя, ИсточникДанныхРуководитель[КолонкаСведений.Имя]);
			КонецЦикла;
			РезультатФормирования.Удалить("Руководители");
			РезультатФормирования.Удалить("ОткрытыеГосударственныеДанныеФНС");
			РезультатФормирования.Удалить("ЕГРЮЛ");
			РезультатФормирования.Вставить("Руководитель", Руководитель);
	КонецЕсли;

КонецПроцедуры

